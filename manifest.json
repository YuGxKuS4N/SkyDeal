{
  "manifest_version": 3,
  "name": "SkyDeal Google Flights Helper",
  "version": "1.0",
  "description": "Ajoute une zone pour saisir les destinations et lance Google Flights en navigation priv√©e.",
  "permissions": ["scripting", "tabs", "activeTab"],
  "host_permissions": [
    "https://www.google.com/travel/flights*",
    "https://www.google.com/flights/*",
    "https://consent.google.com/*",
    "https://www.google.com/consent/*",
    "https://flights.google.com/*",
    "http://www.google.com/flights/*",
    "http://flights.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/travel/flights*",
        "https://www.google.com/flights/*",
        "https://flights.google.com/*",
        "http://www.google.com/flights/*",
        "http://flights.google.com/*",
        "https://consent.google.com/*",
        "https://www.google.com/consent/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
